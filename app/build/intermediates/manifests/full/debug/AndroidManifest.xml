<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.project.hsteffano.ftune"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="19"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.project.hsteffano.ftune.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.project.hsteffano.ftune.Tuner"
            android:label="@string/title_activity_tuner" >
        </activity>
        <activity
            android:name="com.project.hsteffano.ftune.Metronome.Metronome"
            android:label="@string/title_activity_metronome" >
        </activity>
        <activity
            android:name="com.project.hsteffano.ftune.Help"
            android:label="@string/title_activity_help" >
        </activity>
    </application>

</manifest>